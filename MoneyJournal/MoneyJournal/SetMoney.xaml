<Window x:Class="MoneyManager.SetMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManager"
        mc:Ignorable="d"
        Title="SetMoney" Height="200" Width="200">
    <StackPanel>
        <TextBlock>What's your budget now?</TextBlock>
        <TextBox Name="money" Width="100" TextChanged="money_TextChanged"></TextBox>
        <Button Click="Button_Click">OK</Button>
    </StackPanel>
</Window>
