<Window x:Class="MemoWords.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoWords"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label>Login</Label>
        <TextBox Name="login">1</TextBox>
        <Label>Password</Label>
        <PasswordBox Name="password"></PasswordBox>
        <Button Name="Enter" Click="Enter_Click">Enter</Button>
        <Button Name="Register" Click="Register_Click">Register</Button>
    </StackPanel>
</Window>
